{
    "name": "deploy-bbc",
    "version": "1.1.0",
    "description": "CLI to bootstrap production-ready backends with Bun (Best Backend Code)",
    "workspaces": [
        "cli"
    ],
    "scripts": {
        "dev": "bun --watch cli/src/index.ts",
        "build": "cd cli && bun run build",
        "lint": "eslint . --ext .ts",
        "format": "prettier --write \"**/*.{ts,json,md}\""
    },
    "devDependencies": {
        "@types/bun": "latest",
        "bun-types": "^1.3.7",
        "prettier": "^3.8.1",
        "typescript": "^5.9.3"
    }
}